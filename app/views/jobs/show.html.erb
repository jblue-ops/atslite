<% content_for :title, "#{@job.title} - ATS Lite" %>

<div class="max-w-6xl mx-auto">
  <!-- Breadcrumb -->
  <nav class="flex items-center space-x-2 text-sm text-gray-500 mb-6">
    <%= link_to "Jobs", jobs_path, class: "hover:text-gray-700" %>
    <span>/</span>
    <span class="text-gray-900 font-medium"><%= @job.title %></span>
  </nav>

  <!-- Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-4">
          <h1 class="text-3xl font-bold text-gray-900"><%= @job.display_title %></h1>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
            case @job.status
            when 'published' then 'bg-green-100 text-green-800'
            when 'draft' then 'bg-yellow-100 text-yellow-800'
            when 'closed' then 'bg-red-100 text-red-800'
            when 'archived' then 'bg-gray-100 text-gray-800'
            end %>">
            <%= @job.status.capitalize %>
          </span>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-sm">
          <div class="flex items-center text-gray-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div>
              <div class="text-gray-500 text-xs">Location</div>
              <div class="font-medium text-gray-900"><%= @job.display_location %></div>
            </div>
          </div>
          
          <div class="flex items-center text-gray-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
            </svg>
            <div>
              <div class="text-gray-500 text-xs">Employment Type</div>
              <div class="font-medium text-gray-900"><%= @job.employment_type_display %></div>
            </div>
          </div>
          
          <div class="flex items-center text-gray-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
            <div>
              <div class="text-gray-500 text-xs">Experience Level</div>
              <div class="font-medium text-gray-900"><%= @job.experience_level_display %></div>
            </div>
          </div>
          
          <% if @job.salary_range_min.present? || @job.salary_range_max.present? %>
            <div class="flex items-center text-gray-600">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
              <div>
                <div class="text-gray-500 text-xs">Salary</div>
                <div class="font-medium text-gray-900"><%= @job.salary_range_display %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center space-x-3 ml-6">
        <% if policy(@job).update? %>
          <%= link_to edit_job_path(@job), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Job
          <% end %>
        <% end %>
        
        <!-- State Transition Actions -->
        <% if policy(@job).publish? && @job.draft? %>
          <%= link_to publish_job_path(@job), method: :patch, class: "inline-flex items-center px-4 py-2 bg-green-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-green-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Publish Job
          <% end %>
        <% end %>
        
        <% if policy(@job).close? && @job.published? %>
          <%= link_to close_job_path(@job), method: :patch, class: "inline-flex items-center px-4 py-2 bg-red-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-red-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Close Job
          <% end %>
        <% end %>
        
        <% if policy(@job).reopen? && @job.closed? %>
          <%= link_to reopen_job_path(@job), method: :patch, class: "inline-flex items-center px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Reopen Job
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Job Details -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Description -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Job Description</h2>
        <div class="prose prose-sm max-w-none">
          <%= @job.description %>
        </div>
      </div>
      
      <!-- Requirements -->
      <% if @job.requirements.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Requirements</h2>
          <div class="prose prose-sm max-w-none">
            <%= @job.requirements %>
          </div>
        </div>
      <% end %>
      
      <!-- Qualifications -->
      <% if @job.qualifications.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Preferred Qualifications</h2>
          <div class="prose prose-sm max-w-none">
            <%= @job.qualifications %>
          </div>
        </div>
      <% end %>
      
      <!-- Benefits -->
      <% if @job.benefits.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Benefits</h2>
          <div class="prose prose-sm max-w-none">
            <%= @job.benefits %>
          </div>
        </div>
      <% end %>
      
      <!-- Application Instructions -->
      <% if @job.application_instructions.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Application Instructions</h2>
          <div class="prose prose-sm max-w-none">
            <%= @job.application_instructions %>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Job Stats -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Job Statistics</h3>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Views</span>
            <span class="font-medium"><%= @job.view_count %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Applications</span>
            <span class="font-medium"><%= @job.application_count %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Status</span>
            <span class="font-medium capitalize"><%= @job.status %></span>
          </div>
          <% if @job.published_at.present? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Published</span>
              <span class="font-medium"><%= @job.published_at.strftime("%b %d, %Y") %></span>
            </div>
          <% end %>
          <% if @job.expires_at.present? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Expires</span>
              <span class="font-medium <%= 'text-red-600' if @job.expired? %>">
                <%= @job.expired? ? 'Expired' : @job.expires_at.strftime("%b %d, %Y") %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Hiring Manager -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Hiring Manager</h3>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
              <span class="text-sm font-medium text-gray-700">
                <%= @job.hiring_manager.first_name.first %><%= @job.hiring_manager.last_name.first %>
              </span>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= @job.hiring_manager.full_name %></p>
            <p class="text-sm text-gray-500"><%= @job.hiring_manager.email %></p>
          </div>
        </div>
      </div>
      
      <!-- Department -->
      <% if @job.department.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Department</h3>
          <p class="text-sm text-gray-600"><%= @job.department.name %></p>
        </div>
      <% end %>
      
      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
        <div class="space-y-2">
          <% if policy(@job).archive? %>
            <%= link_to archive_job_path(@job), method: :patch, class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md" do %>
              Archive Job
            <% end %>
          <% end %>
          
          <% if policy(@job).unarchive? && @job.archived? %>
            <%= link_to unarchive_job_path(@job), method: :patch, class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md" do %>
              Unarchive Job
            <% end %>
          <% end %>
          
          <% if policy(@job).view_applications? %>
            <a href="#" class="block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">
              View Applications
            </a>
          <% end %>
          
          <% if policy(@job).destroy? %>
            <%= link_to @job, method: :delete, 
                confirm: "Are you sure you want to delete this job? This action cannot be undone.",
                class: "block w-full text-left px-3 py-2 text-sm text-red-600 hover:bg-gray-100 rounded-md" do %>
              Delete Job
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>