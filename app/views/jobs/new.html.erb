<% content_for :title, "Create New Job" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to "← Back to Jobs", jobs_path, 
        class: "text-sm text-gray-500 hover:text-gray-700 mb-2 inline-block" %>
    <h1 class="text-3xl font-bold text-gray-900">Create New Job Posting</h1>
    <p class="mt-2 text-sm text-gray-600">
      Fill out the form below to create a new job posting. You can save it as a draft and publish it later.
    </p>
  </div>

  <!-- Form -->
  <%= render 'form', job: @job %>
</div>