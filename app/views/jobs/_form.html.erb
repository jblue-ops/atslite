<%= form_with model: job, local: true, class: "space-y-6" do |form| %>
  <% if job.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% job.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-6">Basic Information</h3>
    
    <div class="grid grid-cols-1 gap-6">
      <!-- Job Title -->
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "e.g., Senior Software Engineer" %>
      </div>

      <!-- Location and Employment Details -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <%= form.label :location, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :location, 
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "e.g., San Francisco, CA" %>
        </div>
        
        <div>
          <%= form.label :employment_type, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :employment_type, 
              options_for_select([
                ["Full Time", "full_time"],
                ["Part Time", "part_time"],
                ["Contract", "contract"],
                ["Temporary", "temporary"],
                ["Internship", "internship"]
              ], job.employment_type),
              { prompt: "Select employment type" },
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>
        
        <div>
          <%= form.label :experience_level, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :experience_level, 
              options_for_select([
                ["Entry Level", "entry"],
                ["Junior", "junior"],
                ["Mid Level", "mid"],
                ["Senior", "senior"],
                ["Lead", "lead"],
                ["Executive", "executive"]
              ], job.experience_level),
              { prompt: "Select experience level" },
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>
      </div>

      <!-- Department -->
      <% if current_user.organization.departments.any? %>
        <div>
          <%= form.label :department_id, "Department", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :department_id, 
              options_from_collection_for_select(current_user.organization.departments, :id, :name, job.department_id),
              { prompt: "Select department (optional)" },
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>
      <% end %>

      <!-- Remote Work -->
      <div>
        <div class="flex items-center">
          <%= form.check_box :remote_work_allowed, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          <%= form.label :remote_work_allowed, "Remote work is allowed for this position", class: "ml-2 text-sm text-gray-900" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Salary Information -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-6">Salary Information</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= form.label :salary_range_min, "Minimum Salary", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :salary_range_min, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "50000",
            step: 1000 %>
      </div>
      
      <div>
        <%= form.label :salary_range_max, "Maximum Salary", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :salary_range_max, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "100000",
            step: 1000 %>
      </div>
      
      <div>
        <%= form.label :currency, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :currency, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "USD",
            maxlength: 3 %>
        <p class="mt-1 text-xs text-gray-500">3-letter currency code (e.g., USD, EUR, GBP)</p>
      </div>
    </div>
  </div>

  <!-- Job Content -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-6">Job Content</h3>
    
    <div class="space-y-6">
      <!-- Description -->
      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :description, 
            class: "w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">Provide a detailed description of the role and responsibilities</p>
      </div>

      <!-- Requirements -->
      <div>
        <%= form.label :requirements, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :requirements, 
            class: "w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">List the essential requirements for this position</p>
      </div>

      <!-- Qualifications -->
      <div>
        <%= form.label :qualifications, "Preferred Qualifications", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :qualifications, 
            class: "w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">List preferred qualifications and nice-to-have skills</p>
      </div>

      <!-- Benefits -->
      <div>
        <%= form.label :benefits, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :benefits, 
            class: "w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">Describe the benefits and perks offered with this position</p>
      </div>

      <!-- Application Instructions -->
      <div>
        <%= form.label :application_instructions, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :application_instructions, 
            class: "w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">Provide specific instructions for applicants</p>
      </div>
    </div>
  </div>

  <!-- Publishing Options -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-6">Publishing Options</h3>
    
    <div>
      <%= form.label :expires_at, "Expiration Date (Optional)", class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :expires_at, 
          class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      <p class="mt-1 text-xs text-gray-500">When should this job posting expire? Leave blank for no expiration.</p>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", job_path(job.persisted? ? job : jobs_path), 
        class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    
    <% if job.persisted? %>
      <%= form.submit "Update Job", 
          class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% else %>
      <%= form.submit "Create Job", 
          class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>
<% end %>