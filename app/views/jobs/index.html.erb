<% content_for :title, "Jobs - ATS Lite" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Job Listings</h1>
        <p class="text-gray-600 mt-2">Manage your organization's job postings</p>
      </div>
      
      <div class="flex space-x-3">
        <% if policy(Job).create? %>
          <%= link_to new_job_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 border border-transparent rounded-md font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Job
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <%= form_with url: jobs_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <%= form.text_field :search, value: params[:search], placeholder: "Search jobs...", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.select :status, 
              options_for_select([
                ["All Statuses", "all"],
                ["Draft", "draft"],
                ["Published", "published"],
                ["Closed", "closed"],
                ["Archived", "archived"]
              ], params[:status] || "all"),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <div>
          <%= form.select :employment_type,
              options_for_select([
                ["All Types", "all"],
                ["Full Time", "full_time"],
                ["Part Time", "part_time"],
                ["Contract", "contract"],
                ["Temporary", "temporary"],
                ["Internship", "internship"]
              ], params[:employment_type] || "all"),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <div class="flex space-x-2">
          <%= form.submit "Filter", class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Clear", jobs_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Jobs List -->
  <div class="space-y-4">
    <% if @jobs.any? %>
      <% @jobs.each do |job| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h3 class="text-lg font-semibold text-gray-900">
                  <%= link_to job.display_title, job, class: "hover:text-blue-600" %>
                </h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                  case job.status
                  when 'published' then 'bg-green-100 text-green-800'
                  when 'draft' then 'bg-yellow-100 text-yellow-800'
                  when 'closed' then 'bg-red-100 text-red-800'
                  when 'archived' then 'bg-gray-100 text-gray-800'
                  end %>">
                  <%= job.status.capitalize %>
                </span>
              </div>
              
              <div class="flex items-center space-x-6 text-sm text-gray-600 mb-3">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <%= job.display_location %>
                </div>
                
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
                  </svg>
                  <%= job.employment_type_display %>
                </div>
                
                <% if job.salary_range_min.present? || job.salary_range_max.present? %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                    <%= job.salary_range_display %>
                  </div>
                <% end %>
              </div>
              
              <p class="text-gray-700 text-sm line-clamp-2">
                <%= truncate(job.description, length: 150) %>
              </p>
              
              <div class="flex items-center space-x-4 mt-3 text-xs text-gray-500">
                <span>Created <%= time_ago_in_words(job.created_at) %> ago</span>
                <span><%= job.view_count %> views</span>
                <span><%= job.application_count %> applications</span>
                <% if job.expires_at.present? %>
                  <span class="<%= 'text-red-600' if job.expired? %>">
                    <%= job.expired? ? 'Expired' : "Expires in #{job.days_until_expiry} days" %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center space-x-2 ml-4">
              <% if policy(job).update? %>
                <%= link_to edit_job_path(job), class: "text-gray-400 hover:text-gray-600" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>
              <% end %>
              
              <div class="relative" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                  </svg>
                </button>
                
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200">
                  <div class="py-1">
                    <%= link_to job, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      View Details
                    <% end %>
                    
                    <% if policy(job).publish? && job.draft? %>
                      <%= link_to publish_job_path(job), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                        Publish Job
                      <% end %>
                    <% end %>
                    
                    <% if policy(job).close? && job.published? %>
                      <%= link_to close_job_path(job), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                        Close Job
                      <% end %>
                    <% end %>
                    
                    <% if policy(job).archive? %>
                      <%= link_to archive_job_path(job), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                        Archive Job
                      <% end %>
                    <% end %>
                    
                    <% if policy(job).destroy? %>
                      <%= link_to job, method: :delete, 
                          confirm: "Are you sure you want to delete this job?",
                          class: "block px-4 py-2 text-sm text-red-600 hover:bg-gray-100" do %>
                        Delete Job
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No jobs found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new job posting.</p>
        <% if policy(Job).create? %>
          <div class="mt-6">
            <%= link_to new_job_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Create Job
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>