<% content_for :title, "#{@job_template.name} - ATS Lite" %>

<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <div class="flex items-center space-x-3">
          <h1 class="text-3xl font-bold text-gray-900"><%= @job_template.display_name %></h1>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @job_template.is_active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @job_template.is_active? ? 'Active' : 'Inactive' %>
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <%= @job_template.category.titleize %>
          </span>
        </div>
        <p class="text-gray-600 mt-2">Job template preview and management</p>
      </div>
      
      <div class="flex space-x-3">
        <!-- Use Template Button -->
        <% if policy(@job_template).use? && @job_template.is_active? %>
          <%= link_to use_template_job_template_path(@job_template), method: :post, class: "inline-flex items-center px-4 py-2 bg-green-600 border border-transparent rounded-md font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Use Template
          <% end %>
        <% end %>
        
        <!-- Edit Template Button -->
        <% if policy(@job_template).update? %>
          <%= link_to edit_job_template_path(@job_template), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Template
          <% end %>
        <% end %>
        
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            More Actions
            <svg class="ml-2 -mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
          
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg z-10 border border-gray-200">
            <div class="py-1">
              <% if policy(@job_template).activate? && !@job_template.is_active? %>
                <%= link_to activate_job_template_path(@job_template), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Activate Template
                <% end %>
              <% end %>
              
              <% if policy(@job_template).deactivate? && @job_template.is_active? %>
                <%= link_to deactivate_job_template_path(@job_template), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Deactivate Template
                <% end %>
              <% end %>
              
              <% if policy(@job_template).duplicate? %>
                <%= link_to new_job_template_path(duplicate: @job_template.id), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                  Duplicate Template
                <% end %>
              <% end %>
              
              <%= link_to job_templates_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                All Templates
              <% end %>
              
              <% if policy(@job_template).destroy? %>
                <div class="border-t border-gray-100"></div>
                <%= link_to @job_template, method: :delete, 
                    confirm: "Are you sure you want to delete this template? This action cannot be undone.",
                    class: "block px-4 py-2 text-sm text-red-600 hover:bg-gray-100" do %>
                  <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  Delete Template
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Template Description -->
      <% if @job_template.description.present? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Template Description</h3>
          <div class="prose max-w-none">
            <%= @job_template.description %>
          </div>
        </div>
      <% end %>

      <!-- Job Preview -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Job Preview</h3>
          <p class="text-sm text-gray-600 mt-1">How this template will appear as a job posting</p>
        </div>
        
        <div class="p-6">
          <!-- Job Title & Basic Info -->
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-3"><%= @job_template.display_title %></h2>
            
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-4">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= @job_template.display_location %>
              </div>
              
              <% if @job_template.employment_type.present? %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
                  </svg>
                  <%= @job_template.employment_type_display %>
                </div>
              <% end %>
              
              <% if @job_template.experience_level.present? %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                  <%= @job_template.experience_level_display %>
                </div>
              <% end %>
              
              <% if @job_template.salary_range_min.present? || @job_template.salary_range_max.present? %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                  </svg>
                  <%= @job_template.salary_range_display %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Job Sections -->
          <div class="space-y-8">
            <% if @job_template.template_description.present? %>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-3">Job Description</h4>
                <div class="prose max-w-none">
                  <%= @job_template.template_description %>
                </div>
              </div>
            <% end %>

            <% if @job_template.template_requirements.present? %>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-3">Requirements</h4>
                <div class="prose max-w-none">
                  <%= @job_template.template_requirements %>
                </div>
              </div>
            <% end %>

            <% if @job_template.template_qualifications.present? %>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-3">Preferred Qualifications</h4>
                <div class="prose max-w-none">
                  <%= @job_template.template_qualifications %>
                </div>
              </div>
            <% end %>

            <% if @job_template.template_benefits.present? %>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-3">Benefits</h4>
                <div class="prose max-w-none">
                  <%= @job_template.template_benefits %>
                </div>
              </div>
            <% end %>

            <% if @job_template.template_application_instructions.present? %>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-3">Application Instructions</h4>
                <div class="prose max-w-none">
                  <%= @job_template.template_application_instructions %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Template Info -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Template Information</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Created by</dt>
            <dd class="text-sm text-gray-900"><%= @job_template.created_by.full_name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="text-sm text-gray-900"><%= @job_template.created_at.strftime("%B %d, %Y") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last updated</dt>
            <dd class="text-sm text-gray-900"><%= time_ago_in_words(@job_template.updated_at) %> ago</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Times used</dt>
            <dd class="text-sm text-gray-900"><%= pluralize(@job_template.usage_count, 'time') %></dd>
          </div>
          <% if @job_template.department.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Department</dt>
              <dd class="text-sm text-gray-900"><%= @job_template.department.name %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Recent Jobs -->
      <% if @job_template.jobs.any? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Jobs from Template</h3>
          <div class="space-y-3">
            <% @job_template.jobs.recent.limit(5).each do |job| %>
              <div class="border rounded-lg p-3">
                <h4 class="font-medium text-gray-900 text-sm">
                  <%= link_to job.display_title, job, class: "hover:text-blue-600" %>
                </h4>
                <div class="flex items-center justify-between mt-1">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= 
                    case job.status
                    when 'published' then 'bg-green-100 text-green-800'
                    when 'draft' then 'bg-yellow-100 text-yellow-800'
                    when 'closed' then 'bg-red-100 text-red-800'
                    when 'archived' then 'bg-gray-100 text-gray-800'
                    end %>">
                    <%= job.status.capitalize %>
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= time_ago_in_words(job.created_at) %> ago
                  </span>
                </div>
              </div>
            <% end %>
            <% if @job_template.jobs.count > 5 %>
              <p class="text-xs text-gray-500 text-center">
                and <%= @job_template.jobs.count - 5 %> more jobs...
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>