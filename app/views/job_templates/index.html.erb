<% content_for :title, "Job Templates - ATS Lite" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Job Templates</h1>
        <p class="text-gray-600 mt-2">Manage reusable job posting templates for your organization</p>
      </div>
      
      <div class="flex space-x-3">
        <% if policy(JobTemplate).create? %>
          <%= link_to new_job_template_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 border border-transparent rounded-md font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Template
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <%= form_with url: job_templates_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
        <div>
          <%= form.text_field :search, value: params[:search], placeholder: "Search templates...", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <% categories = JobTemplate.categories_for_organization(current_user.organization) %>
          <%= form.select :category, 
              options_for_select([["All Categories", "all"]] + categories.map { |cat| [cat.titleize, cat] }, params[:category] || "all"),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <div>
          <%= form.select :status,
              options_for_select([
                ["All Status", "all"],
                ["Active", "active"],
                ["Inactive", "inactive"]
              ], params[:status] || "all"),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <div class="flex items-center">
          <%= form.check_box :created_by_me, { checked: params[:created_by_me] == "true" }, "true", "", class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
          <%= form.label :created_by_me, "My templates", class: "ml-2 text-sm text-gray-700" %>
        </div>
        
        <div class="flex space-x-2">
          <%= form.submit "Filter", class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Clear", job_templates_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Templates List -->
  <div class="space-y-4">
    <% if @job_templates.any? %>
      <% @job_templates.each do |template| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h3 class="text-lg font-semibold text-gray-900">
                  <%= link_to template.display_name, template, class: "hover:text-blue-600" %>
                </h3>
                
                <!-- Status Badge -->
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= template.is_active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= template.is_active? ? 'Active' : 'Inactive' %>
                </span>
                
                <!-- Category Badge -->
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= template.category.titleize %>
                </span>
              </div>
              
              <div class="flex items-center space-x-6 text-sm text-gray-600 mb-3">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
                  </svg>
                  <%= template.display_title %>
                </div>
                
                <% if template.location.present? %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <%= template.display_location %>
                  </div>
                <% end %>
                
                <% if template.employment_type.present? %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
                    </svg>
                    <%= template.employment_type_display %>
                  </div>
                <% end %>
                
                <% if template.salary_range_min.present? || template.salary_range_max.present? %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                    <%= template.salary_range_display %>
                  </div>
                <% end %>
              </div>
              
              <% if template.description.present? %>
                <p class="text-gray-700 text-sm line-clamp-2 mb-3">
                  <%= truncate(template.description, length: 150) %>
                </p>
              <% end %>
              
              <% if template.tags.present? %>
                <div class="flex flex-wrap gap-1 mb-3">
                  <% template.tags.split(',').map(&:strip).each do |tag| %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      <%= tag %>
                    </span>
                  <% end %>
                </div>
              <% end %>
              
              <div class="flex items-center space-x-4 text-xs text-gray-500">
                <span>Created <%= time_ago_in_words(template.created_at) %> ago</span>
                <span>by <%= template.created_by.full_name %></span>
                <span><%= pluralize(template.usage_count, 'use') %></span>
                <% if template.department.present? %>
                  <span><%= template.department.name %></span>
                <% end %>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center space-x-2 ml-4">
              <!-- Use Template Button -->
              <% if policy(template).use? && template.is_active? %>
                <%= link_to use_template_job_template_path(template), method: :post, class: "inline-flex items-center px-3 py-1.5 bg-green-600 border border-transparent rounded text-xs font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                  </svg>
                  Use Template
                <% end %>
              <% end %>
              
              <% if policy(template).update? %>
                <%= link_to edit_job_template_path(template), class: "text-gray-400 hover:text-gray-600" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>
              <% end %>
              
              <div class="relative" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                  </svg>
                </button>
                
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200">
                  <div class="py-1">
                    <%= link_to template, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      View Details
                    <% end %>
                    
                    <% if policy(template).activate? && !template.is_active? %>
                      <%= link_to activate_job_template_path(template), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                        Activate Template
                      <% end %>
                    <% end %>
                    
                    <% if policy(template).deactivate? && template.is_active? %>
                      <%= link_to deactivate_job_template_path(template), method: :patch, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                        Deactivate Template
                      <% end %>
                    <% end %>
                    
                    <% if policy(template).duplicate? %>
                      <%= link_to new_job_template_path(duplicate: template.id), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                        Duplicate Template
                      <% end %>
                    <% end %>
                    
                    <% if policy(template).destroy? %>
                      <%= link_to template, method: :delete, 
                          confirm: "Are you sure you want to delete this template?",
                          class: "block px-4 py-2 text-sm text-red-600 hover:bg-gray-100" do %>
                        Delete Template
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No templates found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a reusable job template.</p>
        <% if policy(JobTemplate).create? %>
          <div class="mt-6">
            <%= link_to new_job_template_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Create Template
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>